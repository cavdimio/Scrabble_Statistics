<!-- Card stats -->
<div class="row">
  <div class="col-xl-4 col-md-6 col-sm-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0">Position</h5>
            <% for (var i=0; i<gameStats.names.length; i++){ %>
            <div>     
              <span class="h2 font-weight-bold mb-0"><%= gameStats.names[i] %> </span>
              <span class="h2 font-weight-bold mb-0 float-right"><%=  gameStats.position[i] %> </span>
            </div>
            <% } %>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
              <i class="fas fa-star"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-md-6 col-sm-6">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase text-muted mb-0"> Score </h5>
            <% for (var i=0; i<gameStats.names.length; i++){ %>
            <div>
              <span class="h2 font-weight-bold mb-0"><%= gameStats.names[i] %></span>
              <span class="h2 font-weight-bold mb-0 float-right"> <%=  gameStats.score[i] %> </span> 
            </div>
            <% } %>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
              <i class="fas fa-chart-line"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
