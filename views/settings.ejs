            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- Footer -->
  <%- include('partials/footer'); -%>
</div>

<%- include('partials/end_file'); -%>

<script>
  //If user leaves field blank after focus, this function rewrites initial value to the input field
  function checkValue(id) {
    var value = $('#' + id).val();
    if (value === "") {
      switch (id) {
        case 'input-name':
          $('#' + id).val( <%-JSON.stringify(name) %> );
          break;
        case 'input-username':
          $('#' + id).val( <%-JSON.stringify(username) %> );
          break;
        default:
          break;
      }

    }
  }
</script>