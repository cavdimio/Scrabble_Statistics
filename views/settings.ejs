<!-- Main content -->
<div class="main-content"
     id="panel">
  <!-- Navigation bar-->
  <%- include('partials/navigation_bar'); -%>

  <!-- Header -->
  <!-- Header -->
  <div class="header pb-6 d-flex align-items-center"
       style="min-height: 500px; background-size: cover; background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <h1 class="display-2 text-white">Hello <%= name %> </h1>
          <p class="text-white mt-0 mb-5">Manage your personal information here </p>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card">
          <div class="card-header">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0">Edit profile </h3>
              </div>
            </div>
          </div>
          <div class="card-body">
            <form role="form"
                  action="/settings"
                  method="post">
              <h6 class="heading-small text-muted mb-4">User information</h6>
              <div class="pl-lg-4">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label class="form-control-label"
                             for="input-name">Name</label>
                      <input type="email"
                             id="input-name"
                             class="form-control"
                             onfocus="this.value=''"
                             onblur="checkValue('input-name')"
                             value=<%= name %>>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label class="form-control-label"
                             for="input-username">Username</label>
                      <input type="text"
                             id="input-username"
                             class="form-control"
                             onfocus="this.value=''"
                             onblur="checkValue('input-username')"
                             value=<%= username %>>
                    </div>
                  </div>
                </div>
